<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>{% block title %}Arras Film Festival - {% endblock %}</title>

        <meta name="description" content="{% block description %}{% endblock %}">
        <meta name="viewport" content="width=device-width">

        <link rel="icon" href="{{ asset('bundles/ressources/favicon.ico') }}" type="image/x-icon" />

        {% block stylesheets %}
            <link href="{{ asset('bundles/ressources/css/main.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
    </head>
    <body id="{% block id %}{% endblock %}"> 
        <menu>
            <section class="container_12">
                <a href="{{ path('front_office_homepage') }}">
                    <li {% if app.request.get('_route') == 'front_office_homepage' %}class="current"{% endif %}>Accueil</li>
                </a>
                <a href="{{ path('front_office_articlepage') }}">
                    <li {% if app.request.get('_route') == 'front_office_articlepage' %}class="current"{% endif %}>Articles</li>
                </a>
                <a href="{{ path('front_office_photopage') }}">
                    <li {% if app.request.get('_route') == 'front_office_photopage' %}class="current"{% endif %}>Photos</li>
                </a>
                <a href="{{ path('front_office_videopage') }}">
                    <li {% if app.request.get('_route') == 'front_office_videopage' %}class="current"{% endif %}>Vidéos</li>
                </a>
                <a href="{{ path('front_office_podcastpage') }}">
                    <li {% if app.request.get('_route') == 'front_office_podcastpage' %}class="current"{% endif %}>Podcasts</li>
                </a>
                <a href="{{ path('front_office_programmepage') }}">
                    <li {% if app.request.get('_route') == 'front_office_programmepage' %}class="current"{% endif %}>Programme</li>
                </a>
            </section>
        </menu>
        <header>
            <section class="container_12">
                <section class="aff"><h1>Arras Film Festival 2013</h1></section>
                <section class="logo_box">
                    <img class="epsi" src="{{ asset('bundles/ressources/img/epsi-logo.png') }}" />
                    <img class="polecom" src="{{ asset('bundles/ressources/img/polecom-logo.png') }}" />
                </section>
            </section>  
        </header>

        <section class="main container_12">

        {% block body %}{% endblock %}

         </section>
         <footer class="container_12">
            © Pôlecom - 2013 - Site non-officiel des étudiants de l'EPSI Arras{% if is_granted('IS_AUTHENTICATED_FULLY') %}<a href="{{ path('back_office_home') }}">Administration</a>{% endif %}
            <script>
              (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
              (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
              m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
              })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

              ga('create', 'UA-42324302-1', 'arras-film-festival.fr');
              ga('send', 'pageview');

            </script>
        </footer>

        {% block javascript %}{% endblock %}
    </body>
</html>
