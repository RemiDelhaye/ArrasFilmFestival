{% extends '::template_back.html.twig' %}

{% block body %}

<div class="row">
	<div class="span8 offset2">
		<form class="form-horizontal" action="{{ path('podcast_create') }}" method="post" {{ form_enctype(form) }}>
		    <fieldset>
		    	<legend>Ajouter un podcast</legend>

		    	{{ form_errors(form) }}

		    	<div class="control-group">
			    	{{ form_label(form.audio, label|default(null), { 'label_attr': { 'class': 'control-label' } }) }}
			    	<div class="controls">
				    	{{ form_widget(form.audio, { 'attr': { 'class': 'span4' } }) }}
				    </div>
				    {{ form_errors(form.audio) }}
				</div>

		    	<div class="control-group">
			    	{{ form_label(form.title, label|default(null), { 'label_attr': { 'class': 'control-label' } }) }}
			    	<div class="controls">
				    	{{ form_widget(form.title, { 'attr': { 'placeholder': 'Titre du podcast', 'class': 'span4' } }) }}
				    </div>
				    {{ form_errors(form.title) }}
				</div>

		    	<div class="control-group">
			    	{{ form_label(form.content, label|default(null), { 'label_attr': { 'class': 'control-label' } }) }}
			    	<div class="controls">
				    	{{ form_widget(form.content, { 'attr': { 'placeholder': 'Description du podcast', 'class': 'span4' } }) }}
				    </div>
				    {{ form_errors(form.content) }}
				</div>

					{{ form_widget(form._token) }}

				<div class="form-actions">
				  	<input type="submit" class="btn btn-primary" />
			    	<input type="reset" class="btn" />
				</div>
			</fieldset>
		</form>
	</div>
</div>

{% endblock %}