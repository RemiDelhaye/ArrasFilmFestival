{% extends '::template_back.html.twig' %}

{% block body %}

{%- if form_errors(form.audio) != null -%}
<div class="alert alert-error">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong>Attention !</strong> {{ form_errors(form.audio) }}
</div>
{%- endif -%}

<div class="row">
	<div class="span8 offset2">
		<form class="form-horizontal" action="{{ path('podcast_create') }}" method="post" {{ form_enctype(form) }}>
		    <fieldset>
		    	<legend>Ajouter une podcast</legend>

		    	<div class="control-group">
			    	{{ form_label(form.audio, label|default(null), { 'label_attr': { 'class': 'control-label' } }) }}
			    	<div class="controls">
				    	{{ form_widget(form.audio, { 'attr': { 'class': 'span4' } }) }}
				    </div>
				</div>

		    	<div class="control-group">
			    	{{ form_label(form.title, label|default(null), { 'label_attr': { 'class': 'control-label' } }) }}
			    	<div class="controls">
				    	{{ form_widget(form.title, { 'attr': { 'placeholder': 'Titre de la podcast', 'class': 'span4' } }) }}
				    </div>
				</div>

		    	<div class="control-group">
			    	{{ form_label(form.content, label|default(null), { 'label_attr': { 'class': 'control-label' } }) }}
			    	<div class="controls">
				    	{{ form_widget(form.content, { 'attr': { 'placeholder': 'Description de la podcast', 'class': 'span4' } }) }}
				    </div>
				</div>

					{{ form_widget(form._token) }}

				<div class="form-actions">
				  	<button type="submit" class="btn btn-primary"><i class="icon-ok icon-white"></i> Ajouter le podcast</button>
                    <button type="reset" class="btn"><i class="icon-refresh"></i> Vider</button>
				</div>
			</fieldset>
		</form>
	</div>
</div>

{% endblock %}